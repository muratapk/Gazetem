@model WebApplication3.Models.Kulanıcılar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Kulanıcılar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KulanıcıId" />
            <div class="form-group">
                <label asp-for="KulaniciSifre" class="control-label"></label>
                <input asp-for="KulaniciSifre" class="form-control" />
                <span asp-validation-for="KulaniciSifre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KulaniciAdi" class="control-label"></label>
                <input asp-for="KulaniciAdi" class="form-control" />
                <span asp-validation-for="KulaniciAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YetkiId" class="control-label"></label>
                <input asp-for="YetkiId" class="form-control" />
                <span asp-validation-for="YetkiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
