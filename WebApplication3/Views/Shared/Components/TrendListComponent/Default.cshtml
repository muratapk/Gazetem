@model List<WebApplication3.Models.Haberler>
<div class="row">
    <div class="col-lg-12">
        <div class="trending-tittle">
            <strong>Trending now</strong>
            <!-- <p>Rem ipsum dolor sit amet, consectetur adipisicing elit.</p> -->
            <div class="trending-animated">
                <ul id="js-news" class="js-hidden">
                    @foreach(var item in Model)
                    {
                  <li class="news-item">@item.HaberKonu</li>
                    }
                   
                    
                </ul>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-8">
        <!-- Trending Top -->
        <div class="trending-top mb-30">
            <div class="trend-top-img">
                <img src="assets/img/trending/trending_top.jpg" alt="">
                <div class="trend-top-cap">
                    <span>Appetizers</span>
                    <h2><a href="details.html">Welcome To The Best Model Winner<br> Contest At Look of the year</a></h2>
                </div>
            </div>
        </div>
        <!-- Trending Bottom -->
        <div class="trending-bottom">
            <div class="row">
                @foreach(var item in Model)
                {
                <div class="col-lg-4">
                    <div class="single-bottom mb-35">
                        <div class="trend-bottom-img mb-30">
                            <img src="/Mansetimg/@item.MansetResim"alt="">
                        </div>
                        <div class="trend-bottom-cap">
                            <span class="color1">@item.HaberBaslik</span>
                            <h4><a href="/Home/Detay/@item.HaberId">@item.HaberKonu</a></h4>
                        </div>
                    </div>
                </div>
                }
               
                
            </div>
            <!--bittiş-->
        </div>
    </div>
    <!-- Riht content -->
    <div class="col-lg-4">
        @foreach(var item in Model)
        {
        <div class="trand-right-single d-flex">
            <div class="trand-right-img">
                <img src="/Mansetimg/@item.MansetResim" alt="">
            </div>
            <div class="trand-right-cap">
                <span class="color1">@item.HaberBaslik</span>
                    <h4><a href="/Home/Detay/@item.HaberId">@item.HaberKonu</a></h4>
            </div>
        </div>
        }
       
        
        
       
    </div>
    <!--bitiş-->
</div>